@model IEnumerable<Modelos.GestionTareas.Reporte>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="buscar" value="@ViewBag.Buscar" placeholder="Buscar reporte..." class="form-control mb-2" />
    <button type="submit" class="btn btn-primary">Buscar</button>
    <a asp-action="Index" asp-route-priori="prioridad_asc" class="btn btn-primary btn-sm">Por Prioridad Alta</a>
    <a asp-action="Index" asp-route-priori="prioridad_desc" class="btn btn-primary btn-sm">Por Prioridad Menor</a>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prioridad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaVencimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proyecto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prioridad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVencimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TareaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProyectoId)
            </td>
            <td>
               
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
               
            </td>
        </tr>
}
    </tbody>
</table>
